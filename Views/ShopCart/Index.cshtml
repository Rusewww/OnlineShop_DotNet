@model ShopCartViewModel

<div class="container">
    @foreach (var el in Model.shopCart.ListShopItems)
    {
        <div class="alert alert-warning mt-3">
            <b>Computer compounent:</b> @el.component.name<br />
            <b>Computer compounent:</b> @el.component.price.ToString("c")
        </div>
    }
    <hr />
    <div class="btn btn-danger" asp-controller="Order">Pay</div>
</div>